@model DonateMedicine.Models.Register
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string errorMessage = ViewBag.errorMessage;
}
<style>
    button {
        background-color:limegreen;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        text-align: center;
        width: 100%;
    }
    .button3 {
        border-radius: 8px;
    }
</style>
<h3 class="text-dark">Register</h3>
<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <form method="post" asp-action="Index">
                <div class="form-group">
                    <input asp-for="Username" placeholder="Username" id="userName" class="form-control" type="text" />
                    <span asp-validation-for="Username" id="userName" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <input asp-for="Password" placeholder="Password" id="password" class="form-control" type="password" />
                    <span asp-validation-for="Password" id="password" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input asp-for="Age" placeholder="Age" id="age" class="form-control" type="number" />
                    <span asp-validation-for="Age" id="age" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <select asp-for="Gender" class="form-control">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
                <br />
                <div class="form-group">
                    <input asp-for="Address" class="form-control" id="address" type="text" placeholder="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <div id="message">@errorMessage</div>
                </div>
                <div class="form-group">
                    <button class="button button3" type="submit" id="register"> REGISTER NOW</button>
                </div>
                <a href="/login" class="text-primary small">Log in</a>
            </form>
        </div>
    </div>
</div>