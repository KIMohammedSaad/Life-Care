@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<DonateMedicine.Models.Request>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    tr, th {
        border: 1px solid black;
        min-width: 150px;
    }
</style>
<h3 class="text-dark"><label>All Request Details</label> </h3>
<div>
    <table>
        <thead>
            <tr class="text-center">
                <th><label>Medicine Category</label> </th>
                <th><label>Medicine Name</label></th>
                <th><label>Requested Quantity</label></th>
                <th><label>Requestor Name</label></th>
                <th><label>Delivery Address</label></th>
                <th><label>Requested Date</label></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var d in Model)
                {

                    <tr class="text-center">
                        <td><label id="medCategory">@d.MedicineCategory</label></td>
                        <td><label id="medName">@d.MedicineName</label></td>
                        <td><label id="medQty">@d.RequestedQuatity</label></td>
                        <td><label id="reqName">@d.RequestorName</label></td>
                        <td><label id="delAddress">@d.DeliveredAddress</label></td>
                        <td><label id="reqDate">@d.RequestedDate.ToString("dd/MM/yyyy")</label></td>
                    </tr>

                }

            }
        </tbody>

    </table>
    @if (Model.Count() == 0)
    {
        <label id="noData" style="text-align:center"> No Data Found</label>
    }

</div>