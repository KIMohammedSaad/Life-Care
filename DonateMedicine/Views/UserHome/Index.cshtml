@model IEnumerable<DonateMedicine.Models.Request>
@{
    ViewData["Title"] = "UserHome";
    Layout = "~/Views/Shared/UserLayout.cshtml";

}

<style>
    tr, th {
        border: 1px solid black;
        min-width: 150px;
    }
</style>

<div>
    <div>
        <a href="/userRequestMedicine"><button id="requestMedicine" class="button button3 btn-primary">Request Medicine</button></a>
        <a href="/userDonateMedicine"><button id="donateMedicine" class="button button3 btn-primary">Donate Medicine</button></a>
        <a href="/userViewDonateMedicine"><button id="viewDonateMedicine" class="button button3 btn-primary">View Donate Medicine</button></a>
    </div>
    <h3 class="text-dark"><label> Medicine Request Details</label></h3>
    <table>
        <thead>
            <tr class="text-center">
                <th><label>Medicine Category</label></th>
                <th><label>Medicine Name</label></th>
                <th><label>Requested Quantity</label></th>
                <th><label>Requestor Name</label></th>
                <th><label>Delivery Address</label></th>
                <th><label>Requested Date</label></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var d in Model)
                {

                    <tr class="text-center">
                        <td><label id="medCategory">@d.MedicineCategory</label></td>
                        <td><label id="medName">@d.MedicineName</label></td>
                        <td><label id="medQty">@d.RequestedQuatity</label></td>
                        <td><label id="reqName">@d.RequestorName</label></td>
                        <td><label id="delAddress">@d.DeliveredAddress</label></td>
                        <td><label id="reqDate">@d.RequestedDate.ToString("dd/MM/yyyy")</label></td>
                    </tr>

                }

            }
        </tbody>

    </table>
    @if (Model.Count() == 0)
    {
        <label id="noData" style="text-align:center"> No Data Found</label>
    }

</div>
