@model DonateMedicine.Models.Donation
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
    string errorMessage = ViewBag.errorMessage;
}
<style>
    
</style>
<div>
    <h3 class="text-dark"><label>Donate Medicine</label></h3>
    <form asp-action="Index" method="post">
        <input id="medCategory" asp-for="MedicineCategory" placeholder="Medicine Category" type="text"/>
        <input id="donateMedName" asp-for="MedicineName" placeholder="Medicine Name" type="text"/>
        <input id="quantity" asp-for="DonationQuantity" placeholder="Quantity" type="number"/>
        <button id="submitDonate" type="submit" class="btn btn-info">Submit</button>
        <br />
        <br />
        <div id="message">@errorMessage</div>
    </form>
</div>


